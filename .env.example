# BDC Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# ======================
# Database Configuration
# ======================
POSTGRES_USER=bdc_user
POSTGRES_PASSWORD=your-strong-database-password-here
POSTGRES_DB=bdc_production
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# ======================
# Redis Configuration
# ======================
REDIS_PASSWORD=your-strong-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ======================
# Security Keys - MUST BE CHANGED
# ======================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_THIS_USE_PYTHON_COMMAND_ABOVE_TO_GENERATE
JWT_SECRET_KEY=CHANGE_THIS_USE_PYTHON_COMMAND_ABOVE_TO_GENERATE

# ======================
# Application Settings
# ======================
FLASK_ENV=production
FLASK_DEBUG=False
APP_HOST=0.0.0.0
APP_PORT=5000

# ======================
# External Services
# ======================
# OpenAI API (Optional)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password

# Sentry Error Tracking (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Google Services (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS Services (Optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket

# ======================
# Monitoring
# ======================
PROMETHEUS_ENABLED=True
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# ======================
# Default Admin User (Initial Setup Only)
# ======================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=generate-strong-password-and-change-after-setup

# ======================
# Feature Flags
# ======================
ENABLE_2FA=True
ENABLE_AI_FEATURES=False
ENABLE_WEBSOCKETS=True
ENABLE_RATE_LIMITING=True

# ======================
# Performance Settings
# ======================
WORKERS=4
THREADS=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
TIMEOUT=300