# Production Environment Configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY={{ production_secret_key }}
JWT_SECRET_KEY={{ production_jwt_secret_key }}

# Database Configuration
DB_PASSWORD={{ production_db_password }}
REDIS_PASSWORD={{ production_redis_password }}

# Server Configuration
SERVER_NAME=app.bdc.com
CORS_ORIGINS=https://app.bdc.com
RATE_LIMIT=250,1

# Email Settings
MAIL_SERVER={{ mail_server }}
MAIL_PORT={{ mail_port }}
MAIL_USERNAME={{ mail_username }}
MAIL_PASSWORD={{ mail_password }}
MAIL_USE_TLS=1

# Storage Configuration
STORAGE_BACKEND=s3
AWS_ACCESS_KEY_ID={{ aws_access_key_id }}
AWS_SECRET_ACCESS_KEY={{ aws_secret_access_key }}
S3_BUCKET_NAME={{ production_s3_bucket }}
AWS_REGION=us-east-1

# External Services
GOOGLE_CLIENT_ID={{ google_client_id }}
GOOGLE_CLIENT_SECRET={{ google_client_secret }}
OPENAI_API_KEY={{ openai_api_key }}

# Monitoring
SENTRY_DSN={{ production_sentry_dsn }}
GRAFANA_USER={{ grafana_admin_user }}
GRAFANA_PASSWORD={{ grafana_admin_password }}

# Security Settings
IP_WHITELIST={{ production_ip_whitelist | default('0.0.0.0/0') }}
ALLOWED_HOSTS=app.bdc.com,api.bdc.com
SECURE_HEADERS=1

# Application Settings
GITHUB_REPOSITORY={{ github_repository }}
TAG={{ app_version | default('latest') }}
LOG_LEVEL=WARNING

# Admin Contact
ADMIN_EMAIL={{ admin_email }}