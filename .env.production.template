# BDC Production Environment Configuration Template
# Copy this to .env.production and fill in the actual values

# Application Configuration
FLASK_ENV=production
VITE_ENVIRONMENT=production
NODE_ENV=production

# Database Configuration
POSTGRES_DB=bdc_production
POSTGRES_USER=bdc_user
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://bdc_user:your-secure-postgres-password-here@postgres:5432/bdc_production

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# Application Security
SECRET_KEY=your-very-long-and-secure-secret-key-here-minimum-32-characters
JWT_SECRET_KEY=your-very-long-and-secure-jwt-secret-key-here

# Email Configuration
MAIL_SERVER=smtp.your-email-provider.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@yourdomain.com
MAIL_PASSWORD=your-email-app-password
MAIL_DEFAULT_SENDER=noreply@yourdomain.com

# External API Keys
OPENAI_API_KEY=your-openai-api-key-here
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
ELASTICSEARCH_URL=http://elasticsearch:9200

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-east-1

# Domain and URLs
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Monitoring Passwords
GRAFANA_ADMIN_PASSWORD=your-secure-grafana-password
PROMETHEUS_PASSWORD=your-secure-prometheus-password

# Alerting Configuration
ALERT_EMAIL_DEFAULT=admin@yourdomain.com
ALERT_EMAIL_CRITICAL=admin@yourdomain.com,ops@yourdomain.com
ALERT_EMAIL_WARNING=ops@yourdomain.com
ALERT_EMAIL_INFO=monitoring@yourdomain.com
ALERT_EMAIL_DATABASE=dba@yourdomain.com,ops@yourdomain.com
ALERT_EMAIL_APPLICATION=dev@yourdomain.com,ops@yourdomain.com

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# SMTP for Alerts
SMTP_SMARTHOST=smtp.yourdomain.com:587
SMTP_FROM=alerts@yourdomain.com
SMTP_USERNAME=alerts@yourdomain.com
SMTP_PASSWORD=your-smtp-password

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_RETENTION_DAYS=90

# Performance and Scaling
MAX_WORKERS=4
GUNICORN_WORKERS=3
REDIS_MAX_CONNECTIONS=100
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30

# Security Headers
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' ws: wss: https://api.yourdomain.com;"
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true
ENABLE_BACKUP_AUTOMATION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Session Configuration
SESSION_TIMEOUT=3600
REMEMBER_COOKIE_DURATION=2592000

# File Upload Configuration
MAX_CONTENT_LENGTH=52428800  # 50MB
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=bdc_cache_

# Timezone
TIMEZONE=UTC