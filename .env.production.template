# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# Database
DATABASE_URL=postgresql://postgres:<STRONG_PASSWORD>@postgres:5432/bdc_production
DB_PASSWORD=<STRONG_PASSWORD>

# Redis
REDIS_URL=redis://:<REDIS_PASSWORD>@redis:6379/0
REDIS_PASSWORD=<STRONG_REDIS_PASSWORD>

# Security
SECRET_KEY=<STRONG_SECRET_KEY>
JWT_SECRET_KEY=<STRONG_JWT_SECRET>
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# CORS
CORS_ORIGINS=https://app.bdc.com,https://www.bdc.com

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=<YOUR_EMAIL>
MAIL_PASSWORD=<APP_PASSWORD>
DEFAULT_FROM_EMAIL=noreply@bdc.com

# External APIs
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>

# AWS Configuration
AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY>
AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_KEY>
AWS_REGION=us-east-1
S3_BUCKET_NAME=bdc-production-uploads

# Monitoring
SENTRY_DSN=<YOUR_SENTRY_DSN>
APM_SERVICE_NAME=bdc-production
APM_SERVICE_VERSION=${TAG:-latest}

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=<STRONG_GRAFANA_PASSWORD>

# Google Analytics
GA_TRACKING_ID=<YOUR_GA_TRACKING_ID>

# Feature Flags
ENABLE_OAUTH=true
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=3600

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,gif

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
PERMANENT_SESSION_LIFETIME=86400  # 24 hours

# Application Settings
APP_NAME="BDC Platform"
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 3 * * *"  # Daily at 3 AM

# Docker Registry
GITHUB_REPOSITORY=organization/bdc
TAG=latest