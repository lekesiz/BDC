{
  "name": "bdc-client",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cy:run",
    "test:e2e:ui": "start-server-and-test dev http://localhost:5173 cy:open",
    "test:e2e:auth": "cypress run --spec 'cypress/e2e/auth*.cy.js'",
    "test:e2e:admin": "cypress run --spec 'cypress/e2e/admin*.cy.js'",
    "test:e2e:beneficiary": "cypress run --spec 'cypress/e2e/beneficiary*.cy.js'",
    "test:e2e:evaluation": "cypress run --spec 'cypress/e2e/evaluation*.cy.js'",
    "test:e2e:calendar": "cypress run --spec 'cypress/e2e/calendar*.cy.js'",
    "test:e2e:accessibility": "cypress run --spec 'cypress/e2e/accessibility*.cy.js'",
    "test:e2e:smoke": "cypress run --spec 'cypress/e2e/auth-comprehensive.cy.js,cypress/e2e/complete-flow.cy.js'",
    "test:e2e:comprehensive": "./scripts/run-tests.sh all",
    "lighthouse": "npm run build && lhci autorun",
    "lighthouse:mobile": "npm run build && lhci autorun --collect.settings.formFactor=mobile",
    "lighthouse:desktop": "npm run build && lhci autorun --collect.settings.formFactor=desktop",
    "analyze": "npm run build && open stats.html",
    "test:a11y": "vitest run --reporter=verbose --grep=\"accessibility|a11y\"",
    "test:integration": "vitest run --reporter=verbose --grep=\"integration\"",
    "test:websocket": "vitest run --reporter=verbose --grep=\"WebSocket|Socket\"",
    "clean": "rm -rf dist node_modules/.vite",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "type-check": "tsc --noEmit"
  },
