# Staging Environment Variables Template
# Copy this file to .env.staging and fill in the values

# Database
DATABASE_URL=postgresql://postgres:staging_password@postgres:5432/bdc_staging
DB_PASSWORD=staging_password

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=<STAGING_SECRET_KEY>
JWT_SECRET_KEY=<STAGING_JWT_SECRET>
JWT_ACCESS_TOKEN_EXPIRES=900  # 15 minutes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days

# CORS
CORS_ORIGINS=https://staging.bdc.com,http://localhost:3000

# Email Configuration
MAIL_SERVER=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USE_TLS=true
MAIL_USERNAME=<MAILTRAP_USERNAME>
MAIL_PASSWORD=<MAILTRAP_PASSWORD>
DEFAULT_FROM_EMAIL=noreply@staging.bdc.com

# External APIs
OPENAI_API_KEY=<YOUR_OPENAI_API_KEY>
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>

# AWS Configuration (Using LocalStack for staging)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
S3_BUCKET_NAME=bdc-staging-uploads
AWS_ENDPOINT_URL=http://localstack:4566

# Monitoring
SENTRY_DSN=<YOUR_STAGING_SENTRY_DSN>
APM_SERVICE_NAME=bdc-staging
APM_SERVICE_VERSION=${TAG:-latest}

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Google Analytics
GA_TRACKING_ID=<YOUR_STAGING_GA_TRACKING_ID>

# Feature Flags
ENABLE_OAUTH=true
ENABLE_FILE_UPLOADS=true
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=6000

# File Upload Limits
MAX_UPLOAD_SIZE=20971520  # 20MB (more permissive for testing)
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,gif,zip,txt

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400  # 24 hours

# Application Settings
APP_NAME="BDC Platform (Staging)"
APP_ENV=staging
LOG_LEVEL=DEBUG
DEBUG=true

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Docker Registry
GITHUB_REPOSITORY=organization/bdc
TAG=latest