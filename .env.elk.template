# ================================
# BDC ELK Stack Environment Variables
# ================================

# --------------------------------
# ELK Stack Memory Configuration
# --------------------------------
ELK_ELASTICSEARCH_MEMORY=1G
ELK_ELASTICSEARCH_CPU=1.0
ELK_LOGSTASH_MEMORY=1G
ELK_LOGSTASH_CPU=1.0
ELK_KIBANA_MEMORY=512M
ELK_KIBANA_CPU=0.5
ELK_FILEBEAT_MEMORY=256M
ELK_FILEBEAT_CPU=0.25
ELK_METRICBEAT_MEMORY=256M
ELK_METRICBEAT_CPU=0.25

# --------------------------------
# ELK Stack Ports Configuration
# --------------------------------
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5044

# --------------------------------
# Kibana Configuration
# --------------------------------
KIBANA_ENCRYPTION_KEY=your-32-character-secret-key-here
KIBANA_LOG_LEVEL=info

# --------------------------------
# Elasticsearch Configuration
# --------------------------------
ES_JAVA_OPTS=-Xms512m -Xmx512m

# --------------------------------
# Logstash Configuration
# --------------------------------
LS_JAVA_OPTS=-Xms512m -Xmx512m
LOGSTASH_DEBUG=false

# --------------------------------
# BDC Application Information
# --------------------------------
BDC_ENVIRONMENT=production
BDC_VERSION=1.0.0

# --------------------------------
# Alert Configuration (Optional)
# --------------------------------
ALERT_WEBHOOK_URL=http://localhost:3001/alerts
ALERT_API_KEY=demo-key

# --------------------------------
# Performance Tuning
# --------------------------------
# Linux kernel parameter for Elasticsearch
# vm.max_map_count=262144

# --------------------------------
# Security Configuration
# --------------------------------
# Set to true to enable X-Pack security
ELASTIC_SECURITY_ENABLED=false

# --------------------------------
# Monitoring Configuration
# --------------------------------
ELASTIC_MONITORING_ENABLED=true

# --------------------------------
# Index Lifecycle Management
# --------------------------------
# Days to keep logs
LOG_RETENTION_DAYS=30
METRIC_RETENTION_DAYS=7

# --------------------------------
# Data Directory Configuration
# --------------------------------
DATA_DIR=./data

# --------------------------------
# Additional Environment Variables
# --------------------------------
# Override these in your main .env file
# DATABASE_PASSWORD=your-database-password
# REDIS_PASSWORD=your-redis-password